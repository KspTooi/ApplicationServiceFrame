<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <environments default="prod">
        <environment id="prod">
            <transactionManager type="JDBC"/>

            <dataSource type="POOLED">
                <property name="driver" value="org.h2.Driver"/>
                <property name="url" value="jdbc:h2:./uac_db;MAX_COMPACT_TIME=10000"/>
                <property name="username" value=""/>
                <property name="password" value=""/>
            </dataSource>

        </environment>
    </environments>


    <mappers>
        <mapper resource="mapper/CommandMapper.xml"></mapper>
        <mapper resource="mapper/DocumentMapper.xml"></mapper>
        <mapper resource="mapper/DatabaseMapper.xml"></mapper>
    </mappers>

</configuration>