<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ksptooi.psm.mapper.RequestMapper">

    <resultMap id="poMap" type="com.ksptooi.psm.modes.RequestVo">
        <result column="ID" property="id"/>
        <result column="NAME" property="name"/>
        <result column="PARAMETER_COUNT" property="parameter_count"/>
        <result column="PARAMETERS" property="parameters" />
        <result column="METADATA" property="metadata" />
        <result column="PROCESSOR_ID" property="processorId" />
        <result column="CREATE_TIME" property="createTime" />
    </resultMap>

    <insert id="insert">
        INSERT INTO REQUESTS(ID,NAME,PARAMETER_COUNT,PARAMETERS,METADATA,PROCESSOR_ID,CREATE_TIME)
        VALUES (
                #{val.id}
               ,#{val.name}
               ,#{val.parameters}
               ,#{val.parameters}
               ,#{val.metadata}
               ,#{val.processorId}
               ,#{val.createTime}
               )
    </insert>

    <select id="getByName" resultMap="poMap">
        SELECT * FROM REQUESTS
        WHERE name = #{name}
    </select>


</mapper>